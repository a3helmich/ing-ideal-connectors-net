@model iDealSampleCore.Models.IssuerModel

@{
  ViewData["Title"] = "IAC";
}

<div class="detail-container">
  <div>Functie-parameters:</div>
  <div>(none)</div>
</div>
  &nbsp;
<div class="detail-container">
  <div>Vanuit configuratie:</div>
  <div class="row field-row">
    <div class="col-sm-2 label-field">@Html.DisplayNameFor(model => model.MerchantId)</div>
    <div class="col-sm-10 value-field">@Html.DisplayFor(model => model.MerchantId)</div>
  </div>
  <div class="row field-row">
    <div class="col-sm-2 label-field">@Html.DisplayNameFor(model => model.SubId)</div>
    <div class="col-sm-10 value-field">@Html.DisplayFor(model => model.SubId)</div>
  </div>
  <div class="row field-row">
    <div class="col-sm-2 label-field">@Html.DisplayNameFor(model => model.AcquirerUrl)</div>
    <div class="col-sm-10 value-field small-text">@Html.DisplayFor(model => model.AcquirerUrl)</div>
  </div>
</div>
  &nbsp;
<form method="get">
  <div class="detail-container detail-centered">
    <button asp-area="" asp-controller="Home" asp-action="GetIssuers" class="action-button">Get Issuer List</button>
  </div>
  &nbsp;
</form>
<form method="post">
  <div class="detail-container">
    <div>Resultaat:</div>
    <div class="row field-row">
      <div class="col-sm-2 label-field">@Html.DisplayNameFor(model => model.DateTime)</div>
      <div class="col-sm-10 value-field">@Html.DisplayFor(model => model.DateTime)</div>
    </div>
    <div class="row field-row">
      <div class="col-sm-2 label-field">@Html.DisplayNameFor(model => model.IssuersDropDownList)</div>
      <div class="col-sm-10 value-field">
        <select class="select-field" asp-items="Model?.IssuersDropDownList" asp-for="SelectedIssuerId"></select>
        <span asp-validation-for="SelectedIssuerId" class="validation-container"></span>
      </div>
    </div>
  </div>
  &nbsp;
  <div class="detail-container detail-centered">
    <button asp-area="" asp-controller="Home" asp-action="TransActionRequest" class="action-button">Transaction Request</button>
  </div>
</form>
  &nbsp;
<div>
  <a asp-action="Index">Back to Home</a>
</div>
